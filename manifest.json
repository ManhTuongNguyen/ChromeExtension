{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://*.pythonanywhere.com/*"
  ],
  "content_scripts": [
    {
      "js": [
        "js/notification.js",
        "js/content.js"
      ],
      "matches": [
        "https://en.wikipedia.org/*"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["js/bg_page.js"],
    "persistent": false
  }
}
